set $locker ~/.config/i3/scripts/blur-lock.sh

#programs bindings
bindsym $mod+q kill
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

bindsym $mod+Shift+e exec ~/.config/i3/scripts/powermenu
bindsym $mod+Shift+n exec ~/.config/i3/scripts/empty_workspace.sh
bindsym $mod+F1 exec xed ~/.config/i3/keybindings

bindsym $mod+t exec tilix 
bindsym $mod+Escape exec $locker 
bindsym $mod+b exec brave 
bindsym $mod+Shift+f exec thunar
bindsym Print exec "flameshot gui"
bindsym $alt+Control+p exec "flameshot gui"
bindsym $mod+d exec "rofi -modi combi -combi-modi window,drun,run -show combi"

## Mouse
bindsym --whole-window $mod+$alt+button1 exec "xdotool key --clearmodifiers alt+Left"
bindsym --whole-window $mod+$alt+button2 exec "xdotool key --clearmodifiers ctrl+w"
bindsym --whole-window $mod+$alt+button3 exec "xdotool key --clearmodifiers alt+Right"
bindsym --whole-window $mod+Control+button1 move Left 
bindsym --whole-window $mod+Control+button3 move Right 

# volume
bindsym XF86AudioRaiseVolume exec amixer -D pulse sset Master 5%+ && pkill -RTMIN+1 i3blhttps://github.com/SmartBear/alertsite-fe/pull/357https://github.com/SmartBear/alertsite-fe/pull/357https://github.com/SmartBear/alertsite-fe/pull/357https://github.com/SmartBear/alertsite-fe/pull/357https://github.com/SmartBear/alertsite-fe/pull/357ocks
bindsym XF86AudioLowerVolume exec amixer -D pulse sset Master 5%- && pkill -RTMIN+1 i3blocks
bindsym $mod+XF86AudioRaiseVolume exec amixer -D pulse sset Master 1%+ && pkill -RTMIN+1 i3blocks
bindsym $mod+XF86AudioLowerVolume exec amixer -D pulse sset Master 1%- && pkill -RTMIN+1 i3blocks
bindsym XF86AudioMute exec pamixer -t && notify-send "mute: $(pamixer --get-mute)"
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Backlight control
bindsym XF86MonBrightnessUp exec light -A 10
bindsym XF86MonBrightnessDown exec light -U 10
bindsym XF86KbdBrightnessUp exec ~/.config/i3/scripts/backlit

